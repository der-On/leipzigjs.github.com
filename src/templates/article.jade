
extends layout

block prepend title
  | #{ page.title } -

block header

block content
  article.post
    section.content
      include author
      h1
        a(href=locals.url)= page.title
      p
        mixin author(page.metadata.author)
      != page.html

  #disqus_thread
  script(src='http://leipzigjs.disqus.com/embed.js')
