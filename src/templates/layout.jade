doctype html5
html(lang='de')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/rss.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='/css/bootstrap.css')
      link(rel='stylesheet', href='/css/styles.css')
      script(src='/js/jquery.js')
      script(src='/js/bootstrap.js')
      script(src='/js/app.js')
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        #header.container
          #logo
            img(src='/img/logo.png')

          a.brand(href='/') Leipzig.js

          .nav-collapse.collapse
            ul.nav
              li
                a(href='/location/') Location
              li
                a(href='mailto:leipzigjs@googlegroups.com') Kontakt
              li
                a(href='/impressum/') Impressum
            ul.nav.pull-right
              li
                a(target='_blank', href='https://groups.google.com/forum/#!forum/leipzigjs', rel='tooltip', title='Unsere Mailingliste')
                  | Google Group&nbsp;
                  i.icon-share-alt
              li
                a(target='_blank', href='https://www.google.com/calendar/embed?src=heimke.net_m4mcqp0jn71tc8sid2aeij0d20@group.calendar.google.com&ctz=Europe/Berlin', rel='tooltip', title='Kalender zum Abonnieren')
                  | Google Kalender
                  i.icon-share-alt
              li
                a(target='_blank', href='http://www.github.com/leipzigjs', rel='tooltip', title='Unser Github Profil')
                  | Github&nbsp;
                  i.icon-share-alt
              li
                a(target='_blank', href='http://www.twitter.com/leipzigjs', rel='tooltip', title='Unser Twitter Feed')
                  | Twitter&nbsp;
                  i.icon-share-alt

    #content.container
      block content

    footer.container
      hr

      div.inner
        block footer
          .pull-left
            h6 &copy; #{ new Date().getFullYear() } #{ locals.owner }
