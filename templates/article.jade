
extends layout

block prepend title
  | #{ page.title } - 

block header
  include author
  h1
    a(href=locals.url)= page.title
  p
    | Geschrieben von: 
    mixin author(page.metadata.author)

block content
  article.post
    section.content!= page.html

  #disqus_thread
  script(src='http://leipzigjs.disqus.com/embed.js')
